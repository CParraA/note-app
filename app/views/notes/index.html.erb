<p id="notice"><%= notice %></p>

<div class="row=1"> <!-- se modifico a 1 para qno tener dos columnas -->
  <%= form_for :filters, html: { class: 'input-field col s12' }, method: 'get' do |f| %>
    <%= material_icon.search.css_class('prefix') %>
    <%= f.text_field :title, autofocus: true, placeholder: 'Search by title', value: params.dig(:filters, :title) %>
  <% end %>

  <% @notes.each do |note| %>
    <%= link_to notes_path do %>
	  <div class="col s6">
        <div class="card">
          <div class="card-content black-text ">
            <span class="card-title">
              <%= note.title %>
              <span style="font-size: 50%">
                  <span class="right">
                    <%= format_as_localtime note.created_at %>
                  </span>
              </span>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="fixed-action-btn">
  
  <%= link_to new_note_path, title: 'New note', class: 'btn-floating btn-large pulse enable' do %>
    <%= material_icon.add %>
  <% end %>
</div>
